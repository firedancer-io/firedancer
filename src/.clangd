CompileFlags:
  Add:
  - -D_XOPEN_SOURCE=700
  - -DFD_HAS_ALLOCA=1
  - -DFD_HAS_HOSTED=1
  - -DFD_HAS_ATOMIC=1
  - -DFD_HAS_DOUBLE=1
  - -DFD_HAS_INT128=1
  - -DFD_HAS_ZSTD=1
  - -DFD_HAS_SSE=1
  - -DFD_USING_CLANG=1
---
If:
  PathMatch: .*\.h
CompileFlags:
  Add:
  - -xc-header
---
If:
  PathMatch: .*\.[hc]
CompileFlags:
  Add:
  - -std=c17
---
If:
  PathMatch: .*\.[hc]xx
CompileFlags:
  Add:
  - -std=c++17
---
If:
  PathMatch: .*\.([hc]|[hc]xx)
CompileFlags:
  Add:
  - -Wall
  - -Wextra
  - -Wpedantic
  - -Wstrict-aliasing=2
  - -Wconversion
  - -Wdouble-promotion
  - -Wformat-security
  - -Wimplicit-fallthrough
